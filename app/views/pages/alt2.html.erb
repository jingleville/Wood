        <div id="carouselExampleIndicators" class="carousel slide rounded w-auto" data-ride="carousel">
            <ol class="carousel-indicators">
                <% images.size.times do |index| %>
                  <% if index == 0 %>
                    <li data-target="#carouselExampleIndicators" data-slide-to=<%= index.to_s %> class="active"></li>
                  <% else %>
                    <li data-target="#carouselExampleIndicators" data-slide-to=<%= index.to_s %>></li>
                  <% end %>
                <% end %>
            </ol>
            <div class="carousel-inner">
                <% images.each do |image| %>
                  <% if image == images.first %>
                    <div class="carousel-item active">
                        <%= image_tag image, class: 'd-block w-100', alt: '...' %>
                    </div>  
                  <% else %>
                  <div class="carousel-item">
                      <%= image_tag image, width: 300, class: 'd-block w-100', alt: '...' %>
                  </div>  
                  <% end %>
                <% end %>
            </div>

            <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>

            <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>

